@model emsproject23.Models.Credentials
@inject CurrentUser2 _currentUser
@using emsproject23.Controllers

@{
    ViewData["Credentials"] = "Edit password";
}

<h1>Edit password</h1>

<h4>@ViewData["Credentials"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="UserEmail" class="control-label">Email</label>
                <input name="useremail" class="form-control" value="@_currentUser.GetLoggedInUser().Email" />
                <span asp-validation-for="UserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Current Password</label>
                <input name="currentpass" class="form-control" />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">New Password</label>
                <input name="newpass" class="form-control" />
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Re-enter new Password</label>
                <input name="reenternewpass"  class="form-control" />
                <span asp-validation-for="EncPass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Credentials" asp-action="Index">Back to Credentials page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
